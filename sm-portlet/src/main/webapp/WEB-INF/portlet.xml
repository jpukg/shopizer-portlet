<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

	<!-- Category Portlet -->
	<portlet>
		<portlet-name>shopizer-category</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/category-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.shop.category.Category</resource-bundle>
		<portlet-info>
			<title>Shopizer - Category</title>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>portlet-setup-show-borders</name>
				<value>true</value>
			</preference>
		</portlet-preferences>
	</portlet>

	<!-- Product Portlet -->
	<portlet>
		<portlet-name>shopizer-product</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/product-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.shop.product.Product</resource-bundle>
		<portlet-info>
			<title>Shopizer - Product</title>
		</portlet-info>
	</portlet>

	<!-- Minicart Portlet -->
	<portlet>
		<portlet-name>shopizer-minicart</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/minicart-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.shop.minicart.MiniCartController</resource-bundle>
		<portlet-info>
			<title>Shopizer - Mini Shopping Cart</title>
		</portlet-info>
	</portlet>
	
	<!-- Cart Portlet -->
	<portlet>
		<portlet-name>shopizer-cart</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/cart-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.shop.checkout.cart.CartController</resource-bundle>
		<portlet-info>
			<title>Shopizer - Shopping Cart</title>
		</portlet-info>
	</portlet>
	
	<!-- Checkout Portlet -->
	<portlet>
		<portlet-name>shopizer-checkout</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/checkout-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.shop.checkout.cart.CheckoutController</resource-bundle>
		<portlet-info>
			<title>Shopizer - Shopping Checkout</title>
		</portlet-info>
	</portlet>
	
	<!-- Admin Portlet -->
	<portlet>
		<portlet-name>shopizer-admin</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:spring/admin-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>com.salesmanager.portlet.admin.AdminController</resource-bundle>
		<portlet-info>
			<title>Shopizer - Administration</title>
		</portlet-info>
	</portlet>

</portlet-app>